@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager

@if(SignInManager.IsSignedIn(User))
{
    <ul class="navbar-nav text-white" style="margin-right:20px; font-size:1.1em; font-weight:500">
        <li>Olá, @User.Identity.Name</li>
        <form method="post" asp-controller="Contas" asp-action="Logout">           
            <button type="submit" style="width:auto" class="nav-link btn btn-link py-0">
                Sair
            </button>
        </form>
    </ul>
}
else
{
    <ul class="navbar-nav" style="margin-right:20px; font-size:1.1em; font-weight:500">
        <li>
            <a class="nav-link text-white" asp-controller="Contas" asp-action="Registro">
                Registrar
            </a>
        </li>
        <li>
            <a class="nav-link text-white" asp-controller="Contas" asp-action="Login">
                Entrar
            </a>
        </li>
    </ul>  
}
