@model List<FabricantesModel>
@{
    ViewData["Title"] = "Lista de Fabricantes";
}

<header class="d-flex justify-content-between align-items-center">
    <a class="btn btn-light" asp-controller="Home" asp-action="Menu" role="button">Voltar</a>
    <div>
        <h3 style="color:#585858">Fabricantes</h3>
    </div>

    <div>
        <a class="btn btn-primary" role="button" asp-controller="Fabricantes" asp-action="Cadastrar">Novo Fabricante</a>
    </div>
</header>
<hr />

<div class="text-center" style="margin-bottom:60px">

    @if (TempData["MensagemSucesso"] != null)
    {
        <div class="alert alert-success" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert">x</button>
            @TempData["MensagemSucesso"]
        </div>
    }

    @if (TempData["MensagemErro"] != null)
    {
        <div class="alert alert-danger" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert">x</button>
            @TempData["MensagemErro"]
        </div>
    }
    <br />

    <table class="display" id="table-fabricante" style="width:100%">
        <thead>
            <tr style="color:#585858">
                <th scope="col">#</th>
                <th scope="col">Fabricante</th>
                <th scope="col">País de Origem</th>
                <th scope="col">Ano de Fundação</th>
                <th scope="col">Website</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var fabricantes in Model)
                {
                    <tr>
                        <td scope="row">@fabricantes.Id</td>
                        <td>@fabricantes.Fabricante</td>
                        <td>@fabricantes.PaisOrigem</td>
                        <td>@fabricantes.AnoFundacao</td>
                        <td>@fabricantes.Website</td>
                        <td>
                            <div class="btn-group" role="group" aria-label="Basic example">
                                <a role="button" class="btn btn-primary gap-2" asp-route-id="@fabricantes.Id" asp-controller="Fabricantes" asp-action="Editar"><i class="fa-solid fa-pen"></i>Editar</a>
                                <a role="button" class="btn btn-danger gap-2" asp-route-id="@fabricantes.Id" asp-controller="Fabricantes" asp-action="DeletarConfirmacao"><i class="fa-solid fa-trash"></i>Deletar</a>
                            </div>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>

</div>

