@model List<VendasModel>
@{
    ViewData["Title"] = "Vendas";
}

<div class="d-grid d-md-flex">
    <a class="waves-effect waves-light btn" role="button" asp-controller="Home" asp-action="Index"><i class="small material-icons">arrow_back</i></a>
</div>

<div class="text-center row">
    <h3 style="color:#585858">Listagem de Vendas</h3>
</div>

<br />

<div class="text-center">
    
    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
        <a class="btn btn-primary" role="button" asp-controller="Vendas" asp-action="Registrar">Nova Venda</a>
    </div>

    <br />
    <br />

    <table class="table table-striped">
        <thead>
            <tr style="color:#585858">
                <th scope="col">Protocolo da Venda</th>
                <th scope="col">Data da Venda</th>
                <th scope="col">Modelo do Veículo</th>
                <th scope="col">Concessionária</th>
                <th scope="col">Valor da Venda</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (VendasModel vendas in Model)
                {
                    <tr>
                        <td>@vendas.ProtocoloVenda</td>
                        <td>@vendas.DataVenda</td>
                        <td>@vendas.VeiculoModelo</td>
                        <td>@vendas.Concessionaria</td>
                        <td>@vendas.PrecoVenda</td>
                        <td>
                            <div class="btn-group" role="group" aria-label="Basic example">
                                <a role="button" class="btn btn-info gap-2" asp-route-id="@vendas.ProtocoloVenda" asp-controller="Vendas" asp-action="Editar"><i class="small material-icons">border_color</i></a>
                                <a role="button" class="btn btn-danger gap-2" asp-route-id="@vendas.ProtocoloVenda" asp-controller="Vendas" asp-action="DeletarConfirmacao"><i class="small material-icons">delete</i></a>
                            </div>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>

</div>




