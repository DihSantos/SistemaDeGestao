@model IEnumerable<IdentityUser>


<header class="d-flex justify-content-between align-items-center">
    <div>
        <h3 style="color:#585858">Usuários</h3>
    </div> 
    <div>
        <a class="btn btn-primary" style="width:auto" asp-controller="Contas" asp-area="" asp-action="Registro">Novo Usuário</a>
    </div>
</header>
<hr />
<a asp-action="Index" asp-controller="Admin" class="btn btn-primary">Voltar</a>

<br />
<br />

@if (Model.Any())
{
    foreach (var user in Model)
    {
        <div class="card mb-3" style="width:100%">
            <div class="card-header">
                User Id : @user.Id
            </div>
            <div class="card-body">
                <h5 class="card-title">@user.UserName</h5>
            </div>
            <div class="card-footer">
                <form asp-action="DeleteUser" asp-route-id="@user.Id" method="post">
                    <button type="submit" class="btn btn-sm btn-danger">
                        Deletar
                    </button>
                </form>
            </div>
        </div>
    }
}
else
{
    <div class="card">
        <div class="card-header">
            Não existem usuários
        </div>
        <div class="card-body">
            <h5 class="card-title">
                Clique no botão para criar um usuário
            </h5>
        </div>
    </div>
}